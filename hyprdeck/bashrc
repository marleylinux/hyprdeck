# ~/.bashrc

[[ $- != *i* ]] && return

alias ls='ls --color=auto'
alias grep='grep --color=auto'

PS1='\[\e[38;5;201;1m\]\W\[\e[0;38;5;201m\] \[\e[38;5;51;1m\]-> \[\e[0;38;5;51m\] '

LS_COLORS=$LS_COLORS:'di=35:ln=32:ex=31:*.cpp=32:*.c=32:*.vi=32:*.txt=32:*.tar.gz=33:*.zip=33:*.rar=33:*.tar=33:*.tar.gz.part=33:*.jpeg=36:*.jpg=36:*.png=36:*.conf=32:*.exe=31:' ; export LS_COLORS

bind 'set colored-stats on'
